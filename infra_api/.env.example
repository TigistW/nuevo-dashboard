MICROVM_HOME=/home/aoi/microvm
MICROVM_PROXY_HOME=/home/aoi/microvm-proxy

# VM scripts under MICROVM_HOME (absolute paths also supported)
VM_LAUNCH_SCRIPT=launch_vm.sh
VM_STOP_SCRIPT=stop_vm.sh
VM_RESTART_SCRIPT=restart_vm.sh
VM_DELETE_SCRIPT=delete_vm.sh

# OpenVPN docker-compose behavior
PROXY_SERVICE_NAME=proxy-us
PROXY_SELECTION_MODE=config
# PROXY_SELECTION_MODE:
# - config  : one compose service (usually proxy-us) + switch config.ovpn per country/profile
# - auto    : try proxy-<profile>, fallback to PROXY_SERVICE_NAME
# - service : require dedicated proxy-<profile> compose service
# COUNTRY_PROFILE_MAP example: usa=us,spain=es,germany=de,canada=ca,japan=jp
COUNTRY_PROFILE_MAP=
# PROFILE_SERVICE_MAP example: us=proxy-us,de=proxy-de,ca=proxy-ca
PROFILE_SERVICE_MAP=

# API auth (use strong random secrets in production)
VM_API_TOKEN=
PROXY_API_TOKEN=

# Command timeout for shell/docker calls
INFRA_API_TIMEOUT_SEC=60
